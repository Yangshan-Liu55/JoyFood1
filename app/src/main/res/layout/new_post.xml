<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_main">
        <EditText
            android:id="@+id/editText_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ems="10"
            android:hint="@string/hint_name"
            android:singleLine="false"/>

        <EditText
            android:id="@+id/editText_text"
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ems="10"
            android:hint="@string/hint_text"
            android:singleLine="false"/>

        <ImageView
            android:id="@+id/image_uploaded"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_weight="0" />

        <ImageButton
            android:id="@+id/btn_chooseImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            app:srcCompat="@drawable/ic_add_a_photo_black_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredient:"
            android:textColor="@color/text_show"
            android:textStyle="italic"
            android:textSize="18dp"
            android:layout_marginTop="20dip"/>
        <EditText
            android:id="@+id/editText_ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:hint="Write ingredient here"
            android:singleLine="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direction:"
            android:textColor="@color/text_show"
            android:textStyle="italic"
            android:textSize="18dp"
            android:layout_marginTop="20dip"/>
        <EditText
            android:id="@+id/editText_direction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Write direction here"
            android:singleLine="false"/>

        <Button
            android:id="@+id/btn_addPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="right"
            android:background="@drawable/btn_shape"
            android:textColor="@color/btn_bg"
            android:textStyle="bold"
            android:text="POST" />

        <Button
            android:id="@+id/btn_go_Login"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0"
            android:background="@null"
            android:textColor="@color/bg_main"
            android:textAllCaps="false"
            android:text="Not logged in yet! MUST LOG IN before you add a post!\n\nGo to LOG IN" />

    </LinearLayout>
</ScrollView>
