<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item><!--app导航栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!--系统状态栏颜色-->
        <item name="colorAccent">@color/colorAccent</item><!--控制各个控件被选中时的颜色-->
    </style>

    <style name="CustomWindowTitleText" parent="android:TextAppearance.WindowTitle">
        <item name="android:textColor">#666600</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
